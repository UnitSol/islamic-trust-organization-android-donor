<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.RequestProjectActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/cmd_go_to_my_projects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/go_to_my_projects"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/go_back_botton" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/go_to_my_projects"
                android:fontFamily="sans-serif-black"
                android:text="Request Project"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textSize="20sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/cmd_project_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cmd_go_to_my_projects">

            <TextView
                android:id="@+id/lbl_project_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Type"
                android:textColor="#B0B0B0"
                android:textSize="14sp"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="18dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="360dp"
                android:layout_height="48dp"
                android:layout_below="@+id/lbl_project_type"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:hint="Project Type"
                android:paddingLeft="19dp">
                <!--                <AutoCompleteTextView-->
                <!--                    android:id="@+id/drop_down"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="match_parent"-->
                <!--                    android:inputType="none"-->
                <!--                    android:background="@color/white"-->
                <!--                    android:dropDownSelector=""-->
                <!--                    />-->

            </com.google.android.material.textfield.TextInputLayout>
<!--            <EditText-->
<!--                android:id="@+id/txt_project_type"-->
<!--                android:layout_width="360dp"-->
<!--                android:layout_height="48dp"-->
<!--                android:layout_centerHorizontal="true"-->
<!--                android:background="@drawable/edittext_style"-->
<!--                android:layout_below="@id/lbl_project_type"-->
<!--                android:layout_marginTop="5dp"-->
<!--                android:hint="Project Type"-->
<!--                android:textColorHint="#B0B0B0"-->
<!--                android:inputType="textEmailAddress"-->
<!--                android:textSize="14sp"-->
<!--                android:paddingLeft="19dp"-->
<!--                android:textColor="@color/black"/>-->
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/cmd_project_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cmd_project_type">

            <TextView
                android:id="@+id/lbl_project_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project cost"
                android:textColor="#B0B0B0"
                android:textSize="14sp"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="18dp"
                />
            <EditText
                android:id="@+id/txt_project_cost"
                android:layout_width="360dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/edittext_style"
                android:layout_below="@id/lbl_project_cost"
                android:layout_marginTop="5dp"
                android:hint="Project Cost"
                android:textColorHint="#B0B0B0"
                android:inputType="numberDecimal"
                android:textSize="14sp"
                android:paddingLeft="19dp"
                android:textColor="@color/black"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_request_project"
            android:layout_width="367dp"
            android:layout_height="46dp"
            android:layout_below="@+id/cmd_project_cost"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_curve"
            android:text="Request Project"
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </RelativeLayout>


</RelativeLayout>