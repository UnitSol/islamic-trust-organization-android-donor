<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.SelectProjectTypeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/cmd_go_to_request_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btn_go_to_request_project"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/go_back_botton"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Type"
                android:fontFamily="sans-serif-black"
                android:textFontWeight="700"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/btn_go_to_request_project"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="17dp"/>

        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_project_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/cmd_go_to_request_project"
            tools:listitem="@layout/li_select_project_type" />
    </RelativeLayout>

</RelativeLayout>