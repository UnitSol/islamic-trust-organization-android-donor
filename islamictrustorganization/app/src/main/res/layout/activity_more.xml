<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Controllers.MoreActivity">

    <TextView
        android:id="@+id/lbl_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginLeft="46dp"
        android:fontFamily="sans-serif-black"
        android:text="More"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/cmd_profile"
        android:layout_width="360dp"
        android:layout_height="63dp"
        android:layout_below="@+id/lbl_more"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:background="@drawable/edittext_style">

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="26dp"
            android:layout_height="28.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_more_profile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/img_profile"
            android:text="Profile"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cmd_initiate_Project"
        android:layout_width="360dp"
        android:layout_height="63dp"
        android:layout_below="@+id/cmd_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:background="@drawable/edittext_style">

        <ImageView
            android:id="@+id/img_initiate_project"
            android:layout_width="26dp"
            android:layout_height="28.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_more_initiative" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/img_initiate_project"
            android:text="Initiate Project"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cmd_privacy_policy"
        android:layout_width="360dp"
        android:layout_height="63dp"
        android:layout_below="@+id/cmd_initiate_Project"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:background="@drawable/edittext_style">

        <ImageView
            android:id="@+id/img_privacy_policy"
            android:layout_width="26dp"
            android:layout_height="28.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_more_privacy_policy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/img_privacy_policy"
            android:text="Privacy Policy"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cmd_about_us"
        android:layout_width="360dp"
        android:layout_height="63dp"
        android:layout_below="@+id/cmd_privacy_policy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:background="@drawable/edittext_style">

        <ImageView
            android:id="@+id/img_about_us"
            android:layout_width="26dp"
            android:layout_height="28.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_more_about_us" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/img_about_us"
            android:text="About Us"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/cmd_log_out"
        android:layout_width="360dp"
        android:layout_height="63dp"
        android:layout_below="@+id/cmd_about_us"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:background="@drawable/edittext_style">

        <ImageView
            android:id="@+id/img_log_out"
            android:layout_width="26dp"
            android:layout_height="28.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_more_log_out" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/img_log_out"
            android:text="Logout"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </RelativeLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:itemBackground="@color/white"
        app:itemIconSize="20dp"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_for_donner" />

</RelativeLayout>